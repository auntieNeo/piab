{ stdenv, fetchgit, nix }:

stdenv.mkDerivation rec {
  name = "piab-${version}";
  version = "git";

  src = fetchgit {
    url = "file://@piab_path@";
    rev = "refs/heads/master";
    sha256 = "@piab_hash@";
  };

  buildInputs = [ nix ];

	buildPhase = ''
    make tests
	'';

  installPhase = ''
    mkdir "$out"
    cp -R ./* "$out"/
  '';
}
