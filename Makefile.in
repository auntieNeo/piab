# @configure_input@

# VPATH variables for building outside of the source tree
srcdir = @srcdir@
VPATH = @srcdir@

ROOT_DIR:=$(shell dirname $(realpath $(lastword $(MAKEFILE_LIST))))

all: tests

.PHONY: tests
tests:
	$(MAKE) -C ./tests

.PHONY: livecd
livecd:
	$(MAKE) -C ./livecd

Makefile: Makefile.in config.status
	./config.status $@

config.status: configure
	./config.status --recheck
